<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SensorStats" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_text" />

    <RadioGroup
        android:id="@+id/sample_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="27dp" >

        <RadioButton
            android:id="@+id/slow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slow" />
        
        <RadioButton
            android:id="@+id/medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medium"
            android:checked="true" />
        
        <RadioButton
            android:id="@+id/fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fast" />
        
        <RadioButton
            android:id="@+id/no_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fastest" />
    </RadioGroup>

    <TextView
        android:id="@+id/num_samples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sample_select"
        android:layout_below="@+id/sample_select"
        android:layout_marginTop="25dp"
        android:text="@string/number_of_samples" />

    <TextView
        android:id="@+id/cur_sample_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/num_samples"
        android:layout_alignRight="@+id/textView1"
        android:text="@string/zero" />

</RelativeLayout>